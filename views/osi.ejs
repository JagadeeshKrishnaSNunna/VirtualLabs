<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>Quiz</title>
    <link rel="stylesheet" type="text/css" href="/Semantic/cnquiz.css">
    <script src="js/cnquiz.js"></script>
    
</head>
<body>
    <div class="grid" style="height: 100%;">
        <div class="quiz">
        <h1>QUIZ on Computer Network</h1>
        <hr style="margin-bottom: 20px">
        <form action="" method="post">
  <%for (var i=1;i<=result.cn.length;i++){%>
 
          
       
           <!-- <div class="buttons">
            <button id="btn0"><span id="choice0"><%= result.cn[i-1].op1%></span></button>
            <button id="btn1"><span id="choice1"><%= result.cn[i-1].op2%></span></button>
            <button id="btn2"><span id="choice2"><%= result.cn[i-1].op3%></span></button>
            <button id="btn3"><span id="choice3"><%= result.cn[i-1].op4%></span></button>
        </div> -->
        <div>
            <p><%= `Q${i} .`%><%= result.cn[i-1][`q${i}`]%></p>
            <input type="radio" id="op1" name="<%= result.cn[i-1][`q${i}`]%>" value="<%= result.cn[i-1].op1%>" >
            <label for="male"><%= result.cn[i-1].op1%></label><br>
            <input type="radio" id="op2" name="<%= result.cn[i-1][`q${i}`]%>" value="<%= result.cn[i-1].op2%>">
            <label for="female"><%= result.cn[i-1].op2%></label><br>
            <input type="radio" id="op3" name="<%= result.cn[i-1][`q${i}`]%>" value="<%= result.cn[i-1].op3%>" >
            <label for="other"><%= result.cn[i-1].op3%></label> <br>
            <input type="radio" id="op4" name="<%= result.cn[i-1][`q${i}`]%>" value="<%= result.cn[i-1].op4%>">
            <label for="other"><%= result.cn[i-1].op4%></label>
            <br><br>

        </div>
    
        <%}%>
        <button type="submit">submit</button>
    </form>


 
</div>
<!-- <script src="/js/cnquiz.js"></script> -->
</div>
</body>
</html> 